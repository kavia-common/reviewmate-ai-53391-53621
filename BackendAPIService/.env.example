# BackendAPIService environment example

# Network
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=please_change_me

# Database (local development defaults to SQLite)
DATABASE_PROVIDER=sqlite
DATABASE_URL="file:./dev.db"

# Rate limit (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# AI provider (mock | openai)
AI_PROVIDER=mock
# Only required if AI_PROVIDER=openai
# OPENAI_API_KEY=sk-...

# NODE_ENV can be development|production|test
NODE_ENV=development
